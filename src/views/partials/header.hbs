<div class="header">
    <div class="header__searching">
        <form action="/notifications" method="get">
            <input class="header-search" type="text" placeholder="Tìm kiếm" name='search'>
            <a class="header__searching--link" >
                <img class="header__searching--loupe" src="/img/loupe.png" alt="loupe.png">
            </a>
        </form>         
    </div>
    <a href="/{{user.username}}" class="header-username-link">
        <div class="header-username">
            <img class="header-username__img" src="{{{user.avatarUrl}}}" alt="Logo user">
            <p class="header-username__name">
                {{{user.displayName}}}
            </p>
        </div>
    </a>
    <div class="header-nav">
        <div class="header-nav__logout">
            <a onclick="signOut();">
                <img src="/img/exit.png" alt="icon bell" class="header-nav__logout--logo">
            </a>
        </div>

        <!-- <i class="fa fa-bars"></i> -->

    </div>
</div>  