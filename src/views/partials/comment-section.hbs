{{> add-comment user=user}}
<div class="other-comment-section">
    {{#each comments}}
    {{> comment comment=this}}
    {{/each}}
</div>

{{#ifEquals total current}}
{{else}}
<a href="#" class="comment-readmore">
    Xem thêm
    <span class="cmtCount" data-total-count="{{total}}" data-current-count="{{current}}">10</span>
    bình luận
</a>
{{/ifEquals}}
