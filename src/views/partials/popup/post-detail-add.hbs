<form id="upload-post" class="create-post" action="/" method="POST" enctype="multipart/form-data">
    <div class="myModal container">
        <div class="upload-post__header">
            <img src="/img/logo tdt.png" alt="logo" class="upload-post__header--logo">
            <h1 class="upload-post__header--text">Tạo bài viết</h1>
            <img src="/img/close.png" alt="close.png" class="upload-post__header--close pointer" onclick="closeCreatePost()">
        </div> 
        
        <div class="upload-post__body">
            {{!-- --------------hidden-------------- --}}
            <input type="hidden" name="userId" value="{{user.username}}">
            {{!-- --------------End of hidden-------------- --}}

            {{!-- TODO: embed clip từ youtube --}}
            <div class="attachment-link-section">

            </div>
            {{#ifEquals user.userType "staff"}}
                <div class="row" >
                    <div class="col-lg-2">
                        <label for="chuyenmuc" class="popup-label">Chuyên mục</label>
                    </div>
                    <div class="col-lg-10">
                        <select name="chuyenmuc" class="popup-input-selection">
                            {{#each user.staffInfo.authorized}}
                                <option id="{{this.id}}" value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            {{/ifEquals}}
            {{!-- tiêu đề --}}
            <div class="row" >
                <div class="col-lg-2">
                    <label for="title" placeholder="Tiêu đề" class="popup-label">Tiêu đề</label>
                </div>
                <div class="col-lg-10">
                    <input type="text" placeholder="Tiêu đề" name="title" class="popup-input">
                </div>
            </div>
            {{!-- nội dung --}}
            <div class="row" > 
                <div class="col-lg-2">
                    <label for="noidung" class="popup-label">Nội dung</label>
                </div>
                <div class="col-lg-10">
                    <textarea placeholder="Bạn đang nghĩ gì ..." name="content" class="popup-input-textarea"></textarea>
                </div>
            </div>
            {{!-- 3 nút cuối --}}
            <div class="row" >
                <div class="col-lg-2">
                    <button class="btn btn-outline-light" type="file">
                        <img src="img/attachment.png" alt="attachment">
                    </button>
                </div>
                <div class="col-lg-2">
                    <button class="btn btn-outline-light" type="file">
                        <img src="img/video.png" alt="video">
                    </button>
                </div>
                <div class="col-lg-6">
                
                </div>
                <div class="col-lg-2">
                    <button class="btn btn-outline-light" type="submit">Đăng bài</button>
                </div>
            </div>
        </div>
                
    </div>
</form>