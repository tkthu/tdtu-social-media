 <form id="edit-content" action="/" method="POST" enctype="multipart/form-data">
    <div class="myModal edit-content">
        <div class="edit-content__header">
            <img src="/img/logo tdt.png" alt="logo" class="edit-content__header--logo edit-logo">
            <h1 class="edit-content__header--text">Chỉnh sửa nội dung bài đăng</h1>
            <img src="/img/close.png" alt="close.png" class="edit-content__header--close pointer" onclick="closeEditContentPosted()">
        </div>
        <div class="edit-content__body">
            {{!-- --------------hidden-------------- --}}
            <input type="hidden" name="userId" value="{{user.username}}">
            <input type="hidden" name="postId" value="xxx" id="edit-content__body--postId">
            {{!-- --------------End of hidden-------------- --}}
            {{!-- chuyên mục --}}
            {{#ifEquals user.userType "staff"}}
                <div class="row" >
                    <div class="col-lg-2">
                        <label for="edit-content__body--chuyenmuc" class="popup-label">Chuyên mục</label>
                    </div>
                    <div class="col-lg-10">
                        <select name="chuyenmuc" class="popup-input-selection" id="edit-content__body--chuyenmuc">
                            {{#each user.staffInfo.authorized}}
                                <option id="{{this.id}}" value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            {{/ifEquals}}
            {{!-- tiêu đề --}}
            <div class="row" >
                <div class="col-lg-2">
                    <label for="edit-content__body--tieude" placeholder="Tiêu đề" class="popup-label">Tiêu đề</label>
                </div>
                <div class="col-lg-10">
                    <input type="text" placeholder="Tiêu đề" name="title" class="popup-input" id="edit-content__body--tieude">
                </div>
            </div>
            {{!-- nội dung --}}
            <div class="row" > 
                <div class="col-lg-2">
                    <label for="edit-content__body--noidung" class="popup-label">Nội dung</label>
                </div>
                <div class="col-lg-10">
                    <div id="edit-content__body--noidung" class="popup-input-textarea" name="content" placeholder="Bạn đang nghĩ gì ..."></div>
                    {{!-- <textarea placeholder="Bạn đang nghĩ gì ..." name="content" class="popup-input-textarea"></textarea> --}}
                </div>
            </div>
            {{!-- Youtube url --}}
            <div class="row" > 
                <div class="col-lg-2">
                    <label for="clip-url-edit" class="popup-label">Youtube url</label>
                </div>
                <div class="col-lg-10">
                    <input type="text" placeholder="https://..." class="popup-input input-clip-url" id="edit-content__body--clip-url">
                </div>
            </div>
            {{!-- Youtube embed clip --}}
            <div class="row" >
                <span class="col-lg-2">                         
                </span>
                <div class="col-lg-10">
                    <div class="popup-youtube-section">

                    </div>
                </div>
            </div>
            {{!-- input cũ --}}
            <div class="row" >
                <span class="col-lg-2">                         
                </span>
                <div class="col-lg-10">
                    <div class="popup-attachment-old-section" >

                    </div>
                </div>
            </div>    
            {{!-- thêm input --}}
            <div class="row" >
                <span class="col-lg-2">                         
                </span>
                <div class="col-lg-10">
                    <div class="popup-attachment-section" >

                    </div>
                </div>
            </div>          

            {{!-- 3 nút cuối --}}
            <div class="row" >
                <div class="col-lg-2">
                    <label for="edit-content__body--attach-btn" class="btn btn-outline-light">
                        <img src="/img/attachment.png"  alt="attachment">           
                    </label>
                    <input type="button" name="attachmentFile" id="edit-content__body--attach-btn" onclick="addFileInputTag(this)">
                    
                </div>
                <span class="col-lg-8">
                
                </span>
                <div class="col-lg-2">
                    <button class="btn btn-outline-light" type="submit">Lưu</button>
                </div>
            </div>
        </div>
    </div>
 
 </form>
 
    

