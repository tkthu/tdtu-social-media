<div class="edit-info edit">
    <div class="edit-info__header">
        <img src="/img/logo tdt.png" alt="logo" class="edit-info__header--logo edit-logo">
        <h1 class="edit-info__header--text">Chỉnh sửa thông tin</h1>
        <img src="/img/close.png" alt="close.png" class="edit-info__header--close" onclick="closeInfoStudent()">
    </div>
    <div class="edit-info__body">
        <div class="edit-info__body--edit">
            <label class="edit-info__body--edit-account edit-title" for="account">Tài khoản</label>
            <input class="edit-info__body--edit-account-input" type="text" value="Vương Nhất Bác">
        </div>
        <div class="edit-info__body--edit">
            <label class="edit-info__body--edit-password edit-title" for="password">Mật khẩu</label>
            <input class="edit-info__body--edit-password-input" type="password" value="Công nghệ thông tin">
        </div>
        <button class="btn-change-password">Đổi mật khẩu</button>
    </div>
    <button class="edit-info__btnSave" type="submit">Lưu</button>
</div>