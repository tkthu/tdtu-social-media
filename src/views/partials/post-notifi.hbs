{{!-- input: post --}}
{{!-- 
post: { lấy được post mà

    _id: post._id,
    name: post.name,
    content: post.content,                
    createdAt: post.createdAt,
    lastEdited: post.lastEdited,
    imagesArray: post.imagesArray,
    attachmentsArray: post.attachmentsArray,
    commentsCount: post.commentsCount,
    department: post.department,
    sender: {
      id: 'NgVA256',// thì hiện sender.id chứ  . hay sender.displayName  đó nó báo lỗi gì á thư
      displayName: 'Nguyễn Văn A',
      avatarUrl: '/img/no-face.png'
    }, ,
}

 --}}
<div class="notification-body-item">
    <img src="{{{post.sender.avatarUrl}}}" alt="Img" class="main-posted__user--img">
    <div class="notification-user">
        <a href="/{{post.sender.id}}/posts/{{post._id}}" class="notification-body--item-title-link">
        <h6 class="notification-body--item-title">{{{post.sender.displayName}}}</h6>
        <p class="">
            {{ post.name}}
        </p>
    </a>
    </div>
    <div class="notification-content">
        <p class="notification-body--item-content">
        {{ post.content}}
    </p>
    </div>
    <p class="notification-body--item-date">{{ post.createdAt}}</p>
</div>