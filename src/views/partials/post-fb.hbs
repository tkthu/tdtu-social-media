 <div class="main-posted" id="{{{post._id}}}">
    {{!-------------- post-header --------------}}
    {{> post-header postOwnerId=user.username post=post}}

    {{!-------------- post-content --------------}}
    <div class="main-posted__content">
        <a href="/{{post.sender.id}}/posts/{{post._id}}" class="main-posted__content-title">{{{post.name}}}</a>
        
        <p class="detail-notification--dpment">
            {{{post.department.name}}}
        </p>
        <p class="main-posted__content-content">{{{cutDown post}}}</p>
        
    </div>

    {{!-------------- image-section --------------}}
    {{> image-section imgArray=post.imagesArray}}

    {{!-------------- attachment-section --------------}}
    {{#if post.attachmentsArray}}
        <hr>
        <h6>File đính kèm</h6>
        {{> attachment-section attachArr=post.attachmentsArray}}
    {{/if}}

    {{!-------------- comment-section --------------}}
    <hr>
    {{> comment-section user=user comments=post.comments total=post.commentsCount current=comments.length}}
</div>
