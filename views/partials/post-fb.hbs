<div class="main-posted">
    {{!-------------- post-header --------------}}
    {{> post-header user=user post=post}}

    {{!-------------- post-content --------------}}
    <div class="main-posted__content">
        <a href="/{{post.sender.id}}/posts/{{post._id}}"><h5 class="main-posted__content-title">{{{name}}}</h5></a>
        
        <p class="detail-notification--dpment">
            {{{post.department.name}}}
        </p>
        <p class="main-posted__content-content">{{{cutDown post}}}</p>
        
    </div>

    {{!-------------- image-section --------------}}
    {{> image-section imgArray=post.imagesArray}}

    {{!-------------- attachment-section --------------}}
    {{#if post.attachmentsArray}}
        <hr>
        <h6>File đính kèm</h6>
        {{> attachment-section attachArr=post.attachmentsArray}}
    {{/if}}

    {{!-------------- comment-section --------------}}
    <hr>
    {{> comment-section user=user comments=post.comments}}
</div>